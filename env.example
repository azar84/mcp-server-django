# Django MCP Server Environment Configuration

# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (production recommended)
# DATABASE_URL=postgresql://username:password@localhost:5432/mcp_server

# Encryption key for credentials (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
MCP_ENCRYPTION_KEY=

# MCP Server Configuration
MCP_SERVER_NAME=Django MCP Server
MCP_SERVER_VERSION=1.0.0

# Security Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging
LOG_LEVEL=INFO

# Microsoft Bookings Configuration (Global client credentials, tenant ID is per-token)
MS_BOOKINGS_CLIENT_ID=your-azure-client-id-here
MS_BOOKINGS_CLIENT_SECRET=your-azure-client-secret-here


